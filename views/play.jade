extends navbar

block content

    .container.center
        .row
            .col
                h1.text-center.who-am-i-title Who Am I?

                - for (var i = 0; i < question.facts.length; ++i){
                - if (i < userInfo.clues)
                    .jumbotron.fact(id= "clue" + (i + 1))
                        blockquote.fact
                            h2 #{question.facts[i]}
                - else
                    .jumbotron.fact.hidden(id= "clue" + (i + 1))
                        blockquote.fact
                            h2 #{question.facts[i]}
                - }
        .row
            button.btn.btn-default#getClueBtn(onclick="getClue()") Get another clue
        .row
            button.btn.btn-default#resetBtn(onclick="reset()") Reset (Dev Only)
        .row
            .col-lg-6.col-lg-offset-3
                .input-group
                    input.form-control.guess-input#guessInput(type='text', placeholder='Enter who I am...')
                    span.input-group-btn.guess-input
                        button.guess-input.btn.btn-default#guessBtn(onclick='submitGuess()') Guess!

